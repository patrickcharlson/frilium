root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = false
max_line_length = 120
tab_width = 4
trim_trailing_whitespace = true


[*.html]
indent_style = space
indent_size = 2

# 4 space indentation
[*.py]
indent_style = space
indent_size = 4

[*.js]
indent_style = space
indent_size = 2